package com.campusbussbuddy.ui.screens

import androidx.compose.foundation.Image
import androidx.compose.foundation.background
import androidx.compose.foundation.border
import androidx.compose.foundation.BorderStroke
import androidx.compose.foundation.clickable
import androidx.compose.foundation.interaction.MutableInteractionSource
import androidx.compose.foundation.layout.*
import androidx.compose.foundation.shape.CircleShape
import androidx.compose.foundation.shape.RoundedCornerShape
import androidx.compose.material.ripple.rememberRipple
import androidx.compose.material3.*
import androidx.compose.runtime.*
import androidx.compose.ui.Alignment
import androidx.compose.ui.Modifier
import androidx.compose.ui.draw.blur
import androidx.compose.ui.draw.clip
import androidx.compose.ui.draw.scale
import androidx.compose.ui.draw.shadow
import androidx.compose.ui.graphics.Color
import androidx.compose.ui.layout.ContentScale
import androidx.compose.ui.res.painterResource
import androidx.compose.ui.text.font.FontWeight
import androidx.compose.ui.text.input.PasswordVisualTransformation
import androidx.compose.ui.text.input.VisualTransformation
import androidx.compose.ui.text.style.TextAlign
import androidx.compose.ui.unit.dp
import androidx.compose.ui.unit.sp
import androidx.compose.ui.window.Dialog
import com.campusbussbuddy.R
import com.campusbussbuddy.firebase.FirebaseManager
import kotlinx.coroutines.launch

@Composable
fun UnifiedLoginScreen(
    onStudentLoginSuccess: () -> Unit,
    onDriverLoginSuccess: () -> Unit,
    onAdminLoginSuccess: () -> Unit
) {
    var selectedRole by remember { mutableStateOf("student") }
    var username by remember { mutableStateOf("") }
    var password by remember { mutableStateOf("") }
    var isPasswordVisible by remember { mutableStateOf(false) }
    var isLoading by remember { mutableStateOf(false) }
    var errorMessage by remember { mutableStateOf<String?>(null) }
    var showPrivacyDialog by remember { mutableStateOf(false) }
    var showSupportDialog by remember { mutableStateOf(false) }
    var showAboutDialog by remember { mutableStateOf(false) }
    
    val scope = rememberCoroutineScope()
    
    // Brand colors from HTML design
    val brandTeal = Color(0xFF2D6464)
    val sageGreen = Color(0xFF22C55E).copy(alpha = 0.85f)
    
    Box(
        modifier = Modifier.fillMaxSize()
    ) {
        // Background Image with Brand Teal Overlay (matching HTML design)
        Image(
            painter = painterResource(id = R.drawable.app),
            contentDescription = "Background",
            modifier = Modifier
                .fillMaxSize()
                .scale(1.1f)
                .blur(8.dp),
            contentScale = ContentScale.Crop,
            alpha = 0.9f
        )
        
        // Brand teal overlay (matching HTML: rgba(45, 100, 100, 0.4))
        Box(
            modifier = Modifier
                .fillMaxSize()
                .background(brandTeal.copy(alpha = 0.4f))
        )
        
        // Top Brand Badge (positioned at top of screen - matching HTML)
        Box(
            modifier = Modifier
                .fillMaxWidth()
                .align(Alignment.TopCenter)
                .padding(top = 32.dp),
            contentAlignment = Alignment.Center
        ) {
            Box(
                modifier = Modifier
                    .shadow(
                        elevation = 8.dp,
                        shape = RoundedCornerShape(50.dp)
                    )
                    .background(
                        Color.White.copy(alpha = 0.1f),
                        RoundedCornerShape(50.dp)
                    )
                    .border(
                        width = 1.dp,
                        color = Color.White.copy(alpha = 0.3f),
                        shape = RoundedCornerShape(50.dp)
                    )
                    .padding(horizontal = 20.dp, vertical = 8.dp)
            ) {
                Row(
                    verticalAlignment = Alignment.CenterVertically,
                    horizontalArrangement = Arrangement.Center
                ) {
                    Icon(
                        painter = painterResource(id = R.drawable.ic_directions_bus_vector),
                        contentDescription = "Bus",
                        tint = brandTeal,
                        modifier = Modifier.size(20.dp)
                    )
                    Spacer(modifier = Modifier.width(8.dp))
                    Text(
                        text = "Campus Bus Buddy",
                        fontSize = 14.sp,
                        fontWeight = FontWeight.Bold,
                        color = Color(0xFF111111),
                        letterSpacing = (-0.5).sp
                    )
                }
            }
        }
        
        // Main Content
        Box(
            modifier = Modifier.fillMaxSize(),
            contentAlignment = Alignment.Center
        ) {
            Column(
                modifier = Modifier
                    .fillMaxWidth()
                    .padding(24.dp),
                horizontalAlignment = Alignment.CenterHorizontally,
                verticalArrangement = Arrangement.Center
            ) {
                
                // Login Card (Glass morphism matching HTML)
                Card(
                    modifier = Modifier
                        .fillMaxWidth()
                        .shadow(
                            elevation = 24.dp,
                            shape = RoundedCornerShape(28.dp),
                            ambientColor = Color.Black.copy(alpha = 0.1f),
                            spotColor = Color.Black.copy(alpha = 0.1f)
                        ),
                    shape = RoundedCornerShape(28.dp),
                    colors = CardDefaults.cardColors(
                        containerColor = Color.White.copy(alpha = 0.22f) // Matching HTML: rgba(255, 255, 255, 0.22)
                    ),
                    border = BorderStroke(1.dp, Color.White.copy(alpha = 0.3f))
                ) {
                    Column(
                        modifier = Modifier
                            .fillMaxWidth()
                            .padding(32.dp),
                        horizontalAlignment = Alignment.CenterHorizontally
                    ) {
                        // Profile Icon Circle with indicator dot (matching HTML)
                        Box(
                            contentAlignment = Alignment.Center
                        ) {
                            Box(
                                modifier = Modifier
                                    .size(112.dp)
                                    .shadow(
                                        elevation = 8.dp,
                                        shape = CircleShape,
                                        ambientColor = Color.Black.copy(alpha = 0.1f),
                                        spotColor = Color.Black.copy(alpha = 0.1f)
                                    )
                                    .background(
                                        Color.White.copy(alpha = 0.22f),
                                        CircleShape
                                    )
                                    .border(
                                        width = 2.dp,
                                        color = Color.White.copy(alpha = 0.5f),
                                        shape = CircleShape
                                    ),
                                contentAlignment = Alignment.Center
                            ) {
                                Icon(
                                    painter = painterResource(
                                        id = when (selectedRole) {
                                            "student" -> R.drawable.studentlogin
                                            "driver" -> R.drawable.driver_login
                                            else -> R.drawable.admin
                                        }
                                    ),
                                    contentDescription = "Role Icon",
                                    tint = brandTeal,
                                    modifier = Modifier.size(48.dp)
                                )
                            }
                            
                            // Indicator dot at bottom (matching HTML design)
                            Box(
                                modifier = Modifier
                                    .align(Alignment.BottomCenter)
                                    .offset(y = 4.dp)
                                    .size(8.dp)
                                    .shadow(
                                        elevation = 10.dp,
                                        shape = CircleShape,
                                        ambientColor = brandTeal,
                                        spotColor = brandTeal
                                    )
                                    .background(brandTeal, CircleShape)
                            )
                        }
                        
                        Spacer(modifier = Modifier.height(32.dp))
                        
                        // Title (matching HTML design)
                        Text(
                            text = when (selectedRole) {
                                "student" -> "Student Login"
                                "driver" -> "Driver Login"
                                else -> "Admin Login"
                            },
                            fontSize = 30.sp,
                            fontWeight = FontWeight.Bold,
                            color = Color(0xFF111111),
                            textAlign = TextAlign.Center,
                            letterSpacing = (-0.5).sp
                        )
                        
                        Spacer(modifier = Modifier.height(8.dp))
                        
                        // Subtitle (matching HTML design)
                        Text(
                            text = when (selectedRole) {
                                "student" -> "Welcome back! Please enter your campus credentials to track your bus."
                                "driver" -> "Welcome back! Please enter your credentials to manage bus operations."
                                else -> "Welcome back! Please enter your admin credentials to manage the system."
                            },
                            fontSize = 14.sp,
                            fontWeight = FontWeight.Medium,
                            color = Color(0xFF444444),
                            textAlign = TextAlign.Center,
                            lineHeight = 20.sp,
                            modifier = Modifier.padding(horizontal = 16.dp)
                        )
                        
                        Spacer(modifier = Modifier.height(32.dp))
                        
                        // Username Field (matching HTML glass-input style)
                        OutlinedTextField(
                            value = username,
                            onValueChange = { 
                                username = it
                                errorMessage = null
                            },
                            placeholder = {
                                Text(
                                    text = "Username",
                                    color = Color(0xFF444444).copy(alpha = 0.7f),
                                    fontSize = 16.sp,
                                    fontWeight = FontWeight.Medium
                                )
                            },
                            leadingIcon = {
                                Icon(
                                    painter = painterResource(id = R.drawable.ic_person),
                                    contentDescription = "Username",
                                    tint = Color(0xFF444444),
                                    modifier = Modifier.size(20.dp)
                                )
                            },
                            modifier = Modifier
                                .fillMaxWidth()
                                .height(56.dp),
                            shape = RoundedCornerShape(28.dp),
                            colors = OutlinedTextFieldDefaults.colors(
                                focusedBorderColor = Color.Transparent,
                                unfocusedBorderColor = Color.White.copy(alpha = 0.4f),
                                focusedContainerColor = Color.White.copy(alpha = 0.6f), // Matching HTML: rgba(255, 255, 255, 0.6)
                                unfocusedContainerColor = Color.White.copy(alpha = 0.6f),
                                focusedTextColor = Color(0xFF111111),
                                unfocusedTextColor = Color(0xFF111111)
                            ),
                            singleLine = true,
                            textStyle = LocalTextStyle.current.copy(
                                fontSize = 16.sp,
                                fontWeight = FontWeight.Medium
                            )
                        )
                        
                        Spacer(modifier = Modifier.height(16.dp))
                        
                        // Password Field (matching HTML glass-input style)
                        OutlinedTextField(
                            value = password,
                            onValueChange = { 
                                password = it
                                errorMessage = null
                            },
                            placeholder = {
                                Text(
                                    text = "Password",
                                    color = Color(0xFF444444).copy(alpha = 0.7f),
                                    fontSize = 16.sp,
                                    fontWeight = FontWeight.Medium
                                )
                            },
                            leadingIcon = {
                                Icon(
                                    painter = painterResource(id = R.drawable.ic_visibility_off), // Using lock icon
                                    contentDescription = "Password",
                                    tint = Color(0xFF444444),
                                    modifier = Modifier.size(20.dp)
                                )
                            },
                            trailingIcon = {
                                IconButton(
                                    onClick = { isPasswordVisible = !isPasswordVisible }
                                ) {
                                    Icon(
                                        painter = painterResource(
                                            id = if (isPasswordVisible) R.drawable.ic_visibility_off 
                                            else R.drawable.ic_visibility
                                        ),
                                        contentDescription = if (isPasswordVisible) "Hide password" else "Show password",
                                        tint = Color(0xFF444444),
                                        modifier = Modifier.size(20.dp)
                                    )
                                }
                            },
                            visualTransformation = if (isPasswordVisible) VisualTransformation.None 
                            else PasswordVisualTransformation(),
                            modifier = Modifier
                                .fillMaxWidth()
                                .height(56.dp),
                            shape = RoundedCornerShape(28.dp),
                            colors = OutlinedTextFieldDefaults.colors(
                                focusedBorderColor = Color.Transparent,
                                unfocusedBorderColor = Color.White.copy(alpha = 0.4f),
                                focusedContainerColor = Color.White.copy(alpha = 0.6f),
                                unfocusedContainerColor = Color.White.copy(alpha = 0.6f),
                                focusedTextColor = Color(0xFF111111),
                                unfocusedTextColor = Color(0xFF111111)
                            ),
                            singleLine = true,
                            textStyle = LocalTextStyle.current.copy(
                                fontSize = 16.sp,
                                fontWeight = FontWeight.Medium
                            )
                        )
                        
                        Spacer(modifier = Modifier.height(4.dp))
                        
                        // Forgot Password Link (matching HTML design)
                        Box(
                            modifier = Modifier.fillMaxWidth(),
                            contentAlignment = Alignment.Center
                        ) {
                            Text(
                                text = "Forgot Password?",
                                fontSize = 14.sp,
                                fontWeight = FontWeight.SemiBold,
                                color = brandTeal,
                                modifier = Modifier
                                    .clickable { /* TODO: Implement forgot password */ }
                                    .padding(vertical = 8.dp)
                            )
                        }
                        
                        // Error Message
                        if (errorMessage != null) {
                            Spacer(modifier = Modifier.height(8.dp))
                            Text(
                                text = errorMessage!!,
                                fontSize = 13.sp,
                                fontWeight = FontWeight.Normal,
                                color = Color(0xFFD32F2F),
                                textAlign = TextAlign.Center,
                                modifier = Modifier.fillMaxWidth()
                            )
                        }
                        
                        Spacer(modifier = Modifier.height(24.dp))
                        
                        // Sign In Button (matching HTML sage green button)
                        Button(
                            onClick = {
                                if (username.isNotBlank() && password.isNotBlank()) {
                                    scope.launch {
                                        isLoading = true
                                        errorMessage = null
                                        
                                        when (selectedRole) {
                                            "student" -> {
                                                when (val result = FirebaseManager.authenticateStudent(username, password)) {
                                                    is com.campusbussbuddy.firebase.StudentAuthResult.Success -> {
                                                        isLoading = false
                                                        onStudentLoginSuccess()
                                                    }
                                                    is com.campusbussbuddy.firebase.StudentAuthResult.Error -> {
                                                        isLoading = false
                                                        errorMessage = result.message
                                                    }
                                                }
                                            }
                                            "driver" -> {
                                                when (val result = FirebaseManager.authenticateDriver(username, password)) {
                                                    is com.campusbussbuddy.firebase.DriverAuthResult.Success -> {
                                                        isLoading = false
                                                        onDriverLoginSuccess()
                                                    }
                                                    is com.campusbussbuddy.firebase.DriverAuthResult.Error -> {
                                                        isLoading = false
                                                        errorMessage = result.message
                                                    }
                                                }
                                            }
                                            "admin" -> {
                                                when (val result = FirebaseManager.authenticateAdmin(username, password)) {
                                                    is com.campusbussbuddy.firebase.AuthResult.Success -> {
                                                        isLoading = false
                                                        onAdminLoginSuccess()
                                                    }
                                                    is com.campusbussbuddy.firebase.AuthResult.Error -> {
                                                        isLoading = false
                                                        errorMessage = result.message
                                                    }
                                                }
                                            }
                                        }
                                    }
                                } else {
                                    errorMessage = "Please enter username and password"
                                }
                            },
                            modifier = Modifier
                                .fillMaxWidth()
                                .height(56.dp),
                            shape = RoundedCornerShape(28.dp),
                            colors = ButtonDefaults.buttonColors(
                                containerColor = sageGreen // Matching HTML: rgba(34, 197, 94, 0.85)
                            ),
                            elevation = ButtonDefaults.buttonElevation(
                                defaultElevation = 4.dp,
                                pressedElevation = 2.dp
                            ),
                            enabled = !isLoading
                        ) {
                            if (isLoading) {
                                CircularProgressIndicator(
                                    modifier = Modifier.size(24.dp),
                                    color = Color.White,
                                    strokeWidth = 2.dp
                                )
                            } else {
                                Text(
                                    text = "Sign In",
                                    fontSize = 18.sp,
                                    fontWeight = FontWeight.Bold,
                                    color = Color.White
                                )
                            }
                        }
                        
                        Spacer(modifier = Modifier.height(32.dp))
                        
                        // Switch Role Section (matching HTML design)
                        Column(
                            horizontalAlignment = Alignment.CenterHorizontally,
                            modifier = Modifier.fillMaxWidth()
                        ) {
                            Text(
                                text = "SWITCH ROLE",
                                fontSize = 10.sp,
                                fontWeight = FontWeight.Bold,
                                color = Color(0xFF444444).copy(alpha = 0.6f),
                                letterSpacing = 2.sp
                            )
                            
                            Spacer(modifier = Modifier.height(12.dp))
                            
                            Row(
                                modifier = Modifier.widthIn(max = 240.dp), // Matching HTML: max-w-[240px]
                                horizontalArrangement = Arrangement.SpaceBetween
                            ) {
                                // Student Role Button
                                Box(
                                    modifier = Modifier
                                        .size(56.dp)
                                        .shadow(
                                            elevation = if (selectedRole == "student") 4.dp else 2.dp,
                                            shape = CircleShape
                                        )
                                        .background(
                                            if (selectedRole == "student") 
                                                brandTeal.copy(alpha = 0.1f)
                                            else 
                                                Color.White.copy(alpha = 0.22f),
                                            CircleShape
                                        )
                                        .border(
                                            width = 2.dp,
                                            color = if (selectedRole == "student") 
                                                brandTeal.copy(alpha = 0.6f)
                                            else 
                                                Color.White.copy(alpha = 0.3f),
                                            shape = CircleShape
                                        )
                                        .clickable { 
                                            selectedRole = "student"
                                            errorMessage = null
                                        },
                                    contentAlignment = Alignment.Center
                                ) {
                                    Icon(
                                        painter = painterResource(id = R.drawable.studentlogin),
                                        contentDescription = "Student",
                                        tint = if (selectedRole == "student") brandTeal else Color(0xFF444444),
                                        modifier = Modifier.size(24.dp)
                                    )
                                }
                                
                                // Driver Role Button
                                Box(
                                    modifier = Modifier
                                        .size(56.dp)
                                        .shadow(
                                            elevation = if (selectedRole == "driver") 4.dp else 2.dp,
                                            shape = CircleShape
                                        )
                                        .background(
                                            if (selectedRole == "driver") 
                                                brandTeal.copy(alpha = 0.1f)
                                            else 
                                                Color.White.copy(alpha = 0.22f),
                                            CircleShape
                                        )
                                        .border(
                                            width = 2.dp,
                                            color = if (selectedRole == "driver") 
                                                brandTeal.copy(alpha = 0.6f)
                                            else 
                                                Color.White.copy(alpha = 0.3f),
                                            shape = CircleShape
                                        )
                                        .clickable { 
                                            selectedRole = "driver"
                                            errorMessage = null
                                        },
                                    contentAlignment = Alignment.Center
                                ) {
                                    Icon(
                                        painter = painterResource(id = R.drawable.driver_login),
                                        contentDescription = "Driver",
                                        tint = if (selectedRole == "driver") brandTeal else Color(0xFF444444),
                                        modifier = Modifier.size(24.dp)
                                    )
                                }
                                
                                // Admin Role Button
                                Box(
                                    modifier = Modifier
                                        .size(56.dp)
                                        .shadow(
                                            elevation = if (selectedRole == "admin") 4.dp else 2.dp,
                                            shape = CircleShape
                                        )
                                        .background(
                                            if (selectedRole == "admin") 
                                                brandTeal.copy(alpha = 0.1f)
                                            else 
                                                Color.White.copy(alpha = 0.22f),
                                            CircleShape
                                        )
                                        .border(
                                            width = 2.dp,
                                            color = if (selectedRole == "admin") 
                                                brandTeal.copy(alpha = 0.6f)
                                            else 
                                                Color.White.copy(alpha = 0.3f),
                                            shape = CircleShape
                                        )
                                        .clickable { 
                                            selectedRole = "admin"
                                            errorMessage = null
                                        },
                                    contentAlignment = Alignment.Center
                                ) {
                                    Icon(
                                        painter = painterResource(id = R.drawable.admin),
                                        contentDescription = "Admin",
                                        tint = if (selectedRole == "admin") brandTeal else Color(0xFF444444),
                                        modifier = Modifier.size(24.dp)
                                    )
                                }
                            }
                        }
                    }
                }
            }
        }
        
        // Bottom Buttons (Privacy, Support, About) - positioned at bottom outside card
        Box(
            modifier = Modifier
                .fillMaxWidth()
                .align(Alignment.BottomCenter)
                .padding(bottom = 32.dp),
            contentAlignment = Alignment.Center
        ) {
            Row(
                horizontalArrangement = Arrangement.spacedBy(16.dp)
            ) {
                    Button(
                        onClick = { showPrivacyDialog = true },
                        modifier = Modifier.height(36.dp),
                        shape = RoundedCornerShape(18.dp),
                        colors = ButtonDefaults.buttonColors(
                            containerColor = Color.White.copy(alpha = 0.22f)
                        ),
                        border = BorderStroke(1.dp, Color.White.copy(alpha = 0.3f)),
                        elevation = ButtonDefaults.buttonElevation(
                            defaultElevation = 4.dp
                        )
                    ) {
                        Text(
                            text = "PRIVACY",
                            fontSize = 10.sp,
                            fontWeight = FontWeight.Bold,
                            color = Color(0xFF111111).copy(alpha = 0.8f),
                            letterSpacing = 1.5.sp
                        )
                    }
                    
                    Button(
                        onClick = { showSupportDialog = true },
                        modifier = Modifier.height(36.dp),
                        shape = RoundedCornerShape(18.dp),
                        colors = ButtonDefaults.buttonColors(
                            containerColor = Color.White.copy(alpha = 0.22f)
                        ),
                        border = BorderStroke(1.dp, Color.White.copy(alpha = 0.3f)),
                        elevation = ButtonDefaults.buttonElevation(
                            defaultElevation = 4.dp
                        )
                    ) {
                        Text(
                            text = "SUPPORT",
                            fontSize = 10.sp,
                            fontWeight = FontWeight.Bold,
                            color = Color(0xFF111111).copy(alpha = 0.8f),
                            letterSpacing = 1.5.sp
                        )
                    }
                    
                    Button(
                        onClick = { showAboutDialog = true },
                        modifier = Modifier.height(36.dp),
                        shape = RoundedCornerShape(18.dp),
                        colors = ButtonDefaults.buttonColors(
                            containerColor = Color.White.copy(alpha = 0.22f)
                        ),
                        border = BorderStroke(1.dp, Color.White.copy(alpha = 0.3f)),
                        elevation = ButtonDefaults.buttonElevation(
                            defaultElevation = 4.dp
                        )
                    ) {
                        Text(
                            text = "ABOUT",
                            fontSize = 10.sp,
                            fontWeight = FontWeight.Bold,
                            color = Color(0xFF111111).copy(alpha = 0.8f),
                            letterSpacing = 1.5.sp
                        )
                    }
                }
            }
        }
        
        // Privacy Dialog
        if (showPrivacyDialog) {
        Dialog(onDismissRequest = { showPrivacyDialog = false }) {
            Card(
                modifier = Modifier
                    .fillMaxWidth()
                    .padding(16.dp),
                shape = RoundedCornerShape(20.dp),
                colors = CardDefaults.cardColors(
                    containerColor = Color.White.copy(alpha = 0.95f)
                )
            ) {
                Column(
                    modifier = Modifier.padding(24.dp)
                ) {
                    Text(
                        text = "Privacy Policy",
                        fontSize = 20.sp,
                        fontWeight = FontWeight.Bold,
                        color = Color(0xFF111111)
                    )
                    Spacer(modifier = Modifier.height(16.dp))
                    Text(
                        text = "Your privacy is important to us. We collect and use your data only for providing bus tracking services.",
                        fontSize = 14.sp,
                        color = Color(0xFF444444),
                        lineHeight = 20.sp
                    )
                    Spacer(modifier = Modifier.height(24.dp))
                    Button(
                        onClick = { showPrivacyDialog = false },
                        modifier = Modifier.fillMaxWidth(),
                        colors = ButtonDefaults.buttonColors(
                            containerColor = brandTeal
                        )
                    ) {
                        Text("Close")
                    }
                }
            }
        }
        }
        
        // Support Dialog
        if (showSupportDialog) {
        Dialog(onDismissRequest = { showSupportDialog = false }) {
            Card(
                modifier = Modifier
                    .fillMaxWidth()
                    .padding(16.dp),
                shape = RoundedCornerShape(20.dp),
                colors = CardDefaults.cardColors(
                    containerColor = Color.White.copy(alpha = 0.95f)
                )
            ) {
                Column(
                    modifier = Modifier.padding(24.dp)
                ) {
                    Text(
                        text = "Support",
                        fontSize = 20.sp,
                        fontWeight = FontWeight.Bold,
                        color = Color(0xFF111111)
                    )
                    Spacer(modifier = Modifier.height(16.dp))
                    Text(
                        text = "Need help? Contact us at support@campusbusbuddy.com",
                        fontSize = 14.sp,
                        color = Color(0xFF444444),
                        lineHeight = 20.sp
                    )
                    Spacer(modifier = Modifier.height(24.dp))
                    Button(
                        onClick = { showSupportDialog = false },
                        modifier = Modifier.fillMaxWidth(),
                        colors = ButtonDefaults.buttonColors(
                            containerColor = brandTeal
                        )
                    ) {
                        Text("Close")
                    }
                }
            }
        }
        }
        
        // About Dialog
        if (showAboutDialog) {
        Dialog(onDismissRequest = { showAboutDialog = false }) {
            Card(
                modifier = Modifier
                    .fillMaxWidth()
                    .padding(16.dp),
                shape = RoundedCornerShape(20.dp),
                colors = CardDefaults.cardColors(
                    containerColor = Color.White.copy(alpha = 0.95f)
                )
            ) {
                Column(
                    modifier = Modifier.padding(24.dp)
                ) {
                    Text(
                        text = "About Campus Bus Buddy",
                        fontSize = 20.sp,
                        fontWeight = FontWeight.Bold,
                        color = Color(0xFF111111)
                    )
                    Spacer(modifier = Modifier.height(16.dp))
                    Text(
                        text = "Campus Bus Buddy helps students and staff track campus buses in real-time. Version 1.0",
                        fontSize = 14.sp,
                        color = Color(0xFF444444),
                        lineHeight = 20.sp
                    )
                    Spacer(modifier = Modifier.height(24.dp))
                    Button(
                        onClick = { showAboutDialog = false },
